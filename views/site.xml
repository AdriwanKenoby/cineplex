<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>


      <record model="ir.ui.view" id="site_form_view">
        <field name="name">site.form</field>
        <field name="model">cineplex.site</field>
        <field name="arch" type="xml">
          <form string="Site Form">
            <sheet>
              <group>
                <field name="name"/>
                <field name="cp"/>
              </group>
            </sheet>
          </form>
        </field>
      </record>

      <record model="ir.ui.view" id="site_search_view">
        <field name="name">site.search</field>
        <field name="model">cineplex.site</field>
        <field name="arch" type="xml">
          <search>
            <field name="name"/>
            <field name="cp"/>
          </search>
        </field>
      </record>

        <!-- window action -->
        <!--
            The following tag is an action definition for a "window action",
            that is an action opening a view or a set of views
        -->
        <record model="ir.actions.act_window" id="site_list_action">
            <field name="name">Cities</field>
            <field name="res_model">cineplex.site</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create the first site</p>
            </field>
        </record>

        <!-- top level menu: no parent -->
        <menuitem id="main_cineplex_menu" name="CinepLex"/>
        <!-- A first level in the left side menu is needed
             before using action= attribute -->
        <menuitem id="cineplex_menu" name="CinePLex"
                  parent="main_cineplex_menu"/>
        <!-- the following menuitem should appear *after*
             its parent openacademy_menu and *after* its
             action course_list_action -->
        <menuitem id="cities_menu" name="Cities" parent="cineplex_menu"
                  action="site_list_action"/>
        <!-- Full id location:
             action="openacademy.course_list_action"
             It is not required when it is the same module -->
    </data>
</odoo>
